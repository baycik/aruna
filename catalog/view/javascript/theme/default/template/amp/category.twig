{{ header }}

<div class="amp-wrapper" id="product-category" >
    
	<div  class="container" >
		<div class="row"> 
			{% if thumb %}
			<div class="categoryView-img">
				<amp-img src="{{ thumb }}" width="{{mainWidth}}" height="{{mainHeight}}"  layout="responsive" alt="{{ heading_title }}"></amp-img>
			</div>
			{% endif %}
			
			<h3 class="categoryView-title">{{ heading_title }}</h3>
			
			<hr>
		</div>
	</div>
    

    <div  class="container" >
        <div class="row"> 
            {% for product in products %}
            <div class="product-layout product-list">
                <div class="product-thumb">
                    <div class="image">
                        <a href="{{ product.href }}">
                            <amp-img src="{{ product.thumb }}" width="{{mainWidth}}" height="{{mainHeight}}" alt="{{ product.name }}" layout="responsive" title="{{ product.name }}" > </amp-img>
                        </a>
                    </div>

                    <div class="caption">
                        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                       

                        {% if product.price %}
                        <p class="productView-price">
                            {% if not product.special %}
                                <span class="price-new">{{ product.price }} </span>
                            {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
                        </p>
                        {% endif %} 

                        <div class="rating">
                        {% for i in 1..5 %}
                            {% if rating < i %}
                                <span class="icon icon--ratingEmpty">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="28" viewBox="0 0 26 28"><path d="M0 10.11q0-.58.875-.72L8.72 8.25l3.515-7.11Q12.532.5 13 .5t.767.64l3.516 7.11 7.844 1.14q.875.14.875.72 0 .343-.406.75l-5.672 5.53 1.344 7.812q.016.11.016.313 0 .328-.164.555t-.477.227q-.297 0-.625-.187l-7.016-3.687-7.016 3.687q-.344.187-.625.187-.327 0-.49-.227t-.165-.555q0-.094.03-.313L6.08 16.39.392 10.86q-.39-.423-.39-.75z"/></svg>
                                </span>
                                
                            {% else %}
                                <span class="icon icon--ratingFull">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="28" viewBox="0 0 26 28"><path d="M0 10.11q0-.58.875-.72L8.72 8.25l3.515-7.11Q12.532.5 13 .5t.767.64l3.516 7.11 7.844 1.14q.875.14.875.72 0 .343-.406.75l-5.672 5.53 1.344 7.812q.016.11.016.313 0 .328-.164.555t-.477.227q-.297 0-.625-.187l-7.016-3.687-7.016 3.687q-.344.187-.625.187-.327 0-.49-.227t-.165-.555q0-.094.03-.313L6.08 16.39.392 10.86q-.39-.423-.39-.75z"/></svg>
                                </span>
                            {% endif %}
                        
                        {% endfor %} 
                        </div>
                        <p class="hidden">{{ product.description }}</p>

                    </div>

                    <div class="button-group">
                        {# =========button Cart ======#}
                        <a href="{{product.amp_cart}}" id="button-cart"  class="button button--primary button--addtocart">
                            {{ button_cart }}
                        </a>
                    </div>

                </div>
              
            </div>
        {% endfor %} 
        </div>

      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      

      {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
    </div>
   
</div>


{{ footer }} 
