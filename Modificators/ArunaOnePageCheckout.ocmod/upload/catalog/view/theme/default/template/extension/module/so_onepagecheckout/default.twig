                        ajaxLoadingOff();
                        $('.checkout-shipping-methods').removeClass('checkout-loading');
                    },
                    success: function (html) {
                        $('.checkout-shipping-methods').replaceWith(html);
                        $(document).trigger('so_checkout_reload_cart');
